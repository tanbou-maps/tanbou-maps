<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="p-6">
      <!-- スポット名とレビュー投稿日時 -->
      <div class="mb-6 border-b pb-4">
        <h1 class="text-2xl font-bold text-gray-900 mb-2">
          <%= @spot.name %>のレビュー
        </h1>
        <p class="text-gray-600">
          投稿日: <%= l @review.created_at, format: :long %>
        </p>
      </div>

      <!-- 評価（星） -->
      <div class="mb-6">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">評価</h2>
        <div class="flex gap-1">
          <% @review.rating.times do %>
            <svg class="w-6 h-6 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          <% end %>
          <% (5 - @review.rating).times do %>
            <svg class="w-6 h-6 text-gray-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          <% end %>
        </div>
      </div>

      <!-- レビューコメント -->
      <div class="mb-6">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">コメント</h2>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-gray-800 whitespace-pre-wrap"><%= @review.comment %></p>
        </div>
      </div>

      <!-- 画像表示 -->
      <% if @review.images.attached? %>
        <div class="mb-6">
          <h2 class="text-lg font-semibold text-gray-700 mb-2">写真</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <% @review.images.each do |image| %>
              <div class="relative aspect-w-16 aspect-h-9">
                <%= image_tag image, class: "rounded-lg object-cover w-full h-full" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

            <!-- 戻るボタンの上に追加 -->
      <% if @review.application_user_id == current_user.id %>
        <div class="mt-6">
          <%= button_to spot_review_path(@spot, @review),
                method: :delete,
                class: "text-red-600 hover:text-red-800 font-medium",
                data: {
                  turbo_confirm: "このレビューを削除してもよろしいですか？\n※削除すると復元できません。"
                } do %>
            レビューを削除する
          <% end %>
        </div>
      <% end %>

      <!-- 戻るボタン -->
      <div class="mt-8 flex justify-end">
        <%= link_to spot_reviews_path(@spot), class: "text-blue-600 hover:text-blue-800 font-medium" do %>
          ← レビュー一覧に戻る
        <% end %>
      </div>
    </div>
  </div>
</div>
