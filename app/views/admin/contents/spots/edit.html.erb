<h1>スポット情報を編集</h1>

<%= form_with model: @spot, url: admin_contents_spot_path(@spot), method: :patch, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name, 'スポット名' %>
    <%= form.text_field :name, class: 'form-control', required: true, value: @spot.name %>
  </div>

  <div class="form-group">
    <%= form.label :description, '説明' %>
    <%= form.text_area :description, class: 'form-control', rows: 5, required: true, value: @spot.description %>
  </div>

  <div class="form-group">
    <%= form.label :latitude, '緯度 (Latitude)' %>
    <%= form.number_field :latitude, step: 0.000001, class: 'form-control', value: @spot.latitude, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :longitude, '経度 (Longitude)' %>
    <%= form.number_field :longitude, step: 0.000001, class: 'form-control', value: @spot.longitude, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :popularity_score, '人気スコア' %>
    <%= form.number_field :popularity_score, class: 'form-control', value: @spot.popularity_score, required: true %>
  </div>

  <%= form.submit '更新', class: 'btn btn-primary' %>
<% end %>

<%= link_to '戻る', admin_contents_spots_path, class: 'btn btn-secondary mt-3' %>
