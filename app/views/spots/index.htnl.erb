<div class="container mx-auto px-4 py-8">

  <h1 class="text-2xl mb-4">スポット一覧</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @spots.each do |spot| %>
      <div class="border rounded p-4 shadow-md">
        <h2 class="text-xl font-bold mb-2"><%= spot.name %></h2>
        <p class="text-gray-600 mb-2"><%= spot.description %></p>

        <% if spot.images.any? %>
          <%= image_tag spot.images.first.file, class: 'w-full h-48 object-cover rounded' %>
        <% end %>

        <div class="mt-2">
          <span class="text-sm">緯度: <%= spot.latitude %></span>
          <span class="text-sm ml-2">経度: <%= spot.longitude %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>
