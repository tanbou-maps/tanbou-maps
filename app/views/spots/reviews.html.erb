# app/views/spots/reviews.html.erb
<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <h1 class="text-3xl font-bold text-gray-900"><%= @spot.name %>のレビュー</h1>
        <%= link_to spot_path(@spot), class: "text-blue-600 hover:text-blue-800" do %>
          <span>← スポット詳細に戻る</span>
        <% end %>
      </div>
    </div>

    <!-- レビュー投稿フォーム -->
    <div class="bg-white shadow rounded-lg p-6 mb-8">
      <%= form_with(model: [@spot, Review.new], local: true, class: "space-y-4") do |f| %>
        <div>
          <label class="block text-sm font-medium text-gray-700">評価</label>
          <div class="flex gap-2 mt-1">
            <% 5.times do |i| %>
              <%= f.radio_button :rating, i + 1, class: "hidden peer", id: "star_#{i + 1}" %>
              <label for="star_<%=i + 1%>" class="cursor-pointer">
                <svg class="w-8 h-8 peer-checked:text-yellow-400 text-gray-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              </label>
            <% end %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700">コメント</label>
          <%= f.text_area :comment, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", rows: 4 %>
        </div>

        <%= f.submit 'レビューを投稿', class: 'w-full bg-blue-600 text-white rounded-lg py-2 px-4 hover:bg-blue-700 transition duration-150 ease-in-out' %>
      <% end %>
    </div>

    <!-- レビュー一覧 -->
    <div class="space-y-6">
      <% if @reviews.any? %>
        <% @reviews.each do |review| %>
          <div class="bg-white shadow rounded-lg p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center">
                <div class="flex">
                  <% review.rating.times do %>
                    <svg class="w-5 h-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  <% end %>
                </div>
              </div>
              <span class="text-sm text-gray-500">
                <%= review.created_at.strftime('%Y年%m月%d日') %>
              </span>
            </div>
            <p class="text-gray-700"><%= review.comment %></p>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-8 text-gray-500">
          まだレビューはありません。最初のレビューを投稿してみましょう！
        </div>
      <% end %>
    </div>
  </div>
</div>
