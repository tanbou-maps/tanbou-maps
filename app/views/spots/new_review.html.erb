<!-- app/views/spots/new_review.html.erb -->
<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="bg-white shadow-md rounded-lg p-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-6">
        <%= @spot.name %>のレビューを投稿
      </h1>

      <%= form_with(model: [@spot, @review], local: true, class: "space-y-6") do |f| %>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            評価
          </label>
          <div class="flex gap-4">
            <% (1..5).each do |rating| %>
              <div class="flex items-center">
                <%= f.radio_button :rating, rating,
                    class: "hidden peer",
                    id: "rating_#{rating}" %>
                <label for="rating_<%= rating %>"
                    class="cursor-pointer peer-checked:text-yellow-400">
                  <svg class="w-8 h-8" xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 20 20" fill="currentColor">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                </label>
              </div>
            <% end %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            コメント
          </label>
          <%= f.text_area :comment,
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
              rows: 4 %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            画像
          </label>
          <%= f.file_field :images,
              multiple: true,
              class: "block w-full text-sm text-gray-500
                    file:mr-4 file:py-2 file:px-4
                    file:rounded-md file:border-0
                    file:text-sm file:font-medium
                    file:bg-blue-50 file:text-blue-700
                    hover:file:bg-blue-100" %>
        </div>

        <div class="flex justify-end gap-4">
          <%= link_to "キャンセル", reviews_spot_path(@spot),
              class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-500" %>
          <%= f.submit "レビューを投稿",
              class: "bg-blue-600 text-white rounded-lg px-4 py-2 hover:bg-blue-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
