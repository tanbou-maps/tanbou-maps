<div id="app-header-component"></div>
<div class="min-h-screen bg-gradient-to-t from-fuchsia-50 from-0% via-gray-100 via-50% to-orange-100 to-100%">
  <div class="container mx-auto px-4 py-8 max-w-md sm:max-w-2xl lg:max-w-4xl">
    <div
      class="mb-8 flex flex-col items-center justify-between sm:flex-row"
    >
      <h1 class="mb-4 text-2xl font-bold text-gray-900 sm:mb-0">
        スポット一覧
      </h1>
      <div class="flex flex-col gap-4 sm:flex-row">
        <a
          href="/spots/new"
          class="group relative inline-flex items-center overflow-hidden rounded-xl border-2 border-yellow-300 px-8 py-2 text-yellow-300 hover:text-black"
        >
          <span
            class="duration-400 ease absolute left-0 top-1/2 block h-0 w-full bg-yellow-400 opacity-100 transition-all group-hover:top-0 group-hover:h-full"
          ></span>
          <span class="relative">スポット投稿</span>
        </a>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @spots.each do |spot| %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden transition duration-200 group">
          <% if spot.photos.attached? && spot.photos.first.present? %>
            <%= image_tag spot.photos.first, class: "w-full h-48 object-cover transition-transform duration-500 ease-in-out group-hover:scale-105" %>
          <% else %>
            <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
              <span class="text-gray-400">No image</span>
            </div>
          <% end %>

          <div class="p-4">
            <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= spot.name %></h2>
            <p class="text-gray-600 mb-4 truncate"><%= spot.description %></p>

            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-2">
                <span class="text-sm text-gray-500">投稿者ID: <%= spot.application_user.nickname %></span>
              </div>
              <%= link_to "詳細", spot_path(spot), class: "text-blue-500 hover:text-blue-600" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
