<div id="app-header-component" data-current-user="<%= current_user.to_json %>"></div>
<div class="min-h-screen bg-gradient-to-t from-fuchsia-50 from-0% via-gray-100 via-50% to-orange-100 to-100%">
  <div class="container mx-auto px-4 py-8 max-w-md sm:max-w-2xl lg:max-w-4xl">
    <div
      class="mb-8 flex flex-col items-center justify-between sm:flex-row"
    >
      <h1 class="mb-4 text-2xl font-bold text-gray-900 sm:mb-0">
        スポット一覧
      </h1>
      <div class="flex flex-col gap-4 sm:flex-row">
        <%= link_to new_spot_path, class: "inline-flex items-center justify-center px-6 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 whitespace-nowrap min-w-[140px]" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          スポットを投稿
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @spots.each do |spot| %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden transition duration-200 group">
          <% if spot.images.attached? && spot.images.first.present? %>
            <%= image_tag spot.images.first, class: "w-full h-48 object-cover transition-transform duration-500 ease-in-out group-hover:scale-105" %>
          <% else %>
            <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
              <span class="text-gray-400">No image</span>
            </div>
          <% end %>

          <div class="p-4">
            <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= spot.name %></h2>
            <p class="text-gray-600 mb-4 truncate"><%= spot.description %></p>

            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-2">
                <span class="text-sm text-gray-500"><%= spot.application_user.nickname %></span>
              </div>
              <%= link_to "詳細", spot_path(spot), class: "text-yellow-300 hover:text-yellow-400 focus:border-yellow-300 focus:outline-none focus:ring-2 focus:ring-yellow-300" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="mt-8 text-center">
      <a href="/spots/search" class="underline text-gray-600 hover:text-yellow-400">スポット一覧を地図で見る</a>
    </div>
  </div>
</div>
