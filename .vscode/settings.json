{
  /* --- Visual Code Code Settings -- */
  "editor.minimap.enabled": false, // 右側に表示されるミニマップを非表示
  "explorer.compactFolders": false, // フォルダの中に1つしかフォルダがないときの省略表示を無効化
  "files.trimTrailingWhitespace": true, // 保存時に行末の空白を削除
  "files.trimFinalNewlines": true, //保存時にファイル末尾の無駄な空行を削除
  "files.insertFinalNewline": true, // 保存時にファイル末尾に空行を挿入
  "editor.defaultFormatter": "esbenp.prettier-vscode", // デフォルトのフォーマッターを設定
  "editor.formatOnSave": true, // 保存時にフォーマッターを適用
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit" // 保存時にeslinterを実行させる
  },
  "eslint.format.enable": false, // eslintでのフォーマットを無効化
  /* --- HTML Settings --- */
  "[html]": {
    "editor.tabSize": 2 // Use 2 spaces for indentation
  },
  /* --- CSS Settings --- */
  "[css]": {
    "editor.tabSize": 2 // Use 2 spaces for indentation
  },
  /* --- Javascript Settings --- */
  "[javascript]": {
    "editor.tabSize": 2 // Use 2 spaces for indentation
  },
  /* --- Typescript Settings --- */
  "[typescript]": {
    "editor.tabSize": 2 // Use 2 spaces for indentation
  },
  /* --- Ruby Settings --- */
  // All of these settings are scoped only to the Ruby language
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp", // Use the Ruby LSP as the default formatter
    "editor.formatOnSave": true, // Format files automatically when saving
    "editor.tabSize": 2, // Use 2 spaces for indentation
    "editor.insertSpaces": true, // Use spaces and not tabs for indentation
    "editor.semanticHighlighting.enabled": true, // Enable semantic highlighting
    "editor.formatOnType": true // Enable formatting while typing
  },
  "[erb]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },
  "rubyLsp.formatter": "auto",
  /* --- Vue.js Settings --- */
  "[vue]": {
    "editor.tabSize": 2 // Use 2 spaces for indentation
  },
  /* --- Tailwind CSS Settings --- */
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  }
}
